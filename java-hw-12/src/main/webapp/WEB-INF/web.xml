<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>QuoteServlet</servlet-name>
        <servlet-class>com.itstep.QuoteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuoteServlet</servlet-name>
        <url-pattern>/quote</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SurveyServlet</servlet-name>
        <servlet-class>com.itstep.SurveyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyServlet</servlet-name>
        <url-pattern>/survey</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LaptopManufacturerServlet</servlet-name>
        <servlet-class>com.itstep.LaptopManufacturerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LaptopManufacturerServlet</servlet-name>
        <url-pattern>/laptop/*</url-pattern>
    </servlet-mapping>
</web-app> 